<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/teal_200"
    app:cardCornerRadius="60dp"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
>

        <TextView
            android:id="@+id/tv_depPurp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/tv_depRoute"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_depType"
            tools:text="depPurple" />

        <TextView
            android:id="@+id/tv_depVehicle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/tv_depType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_depName"
            tools:text="vehicleID" />

        <TextView
            android:id="@+id/tv_depName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/tv_depVehicle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="vehicleDriver" />

        <TextView
            android:id="@+id/tv_depType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/tv_depPurp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_depVehicle"
            tools:text="depType" />

        <TextView
            android:id="@+id/tv_depRoute"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="44dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/tv_depDisposer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_depPurp"
            tools:text="depRoute" />

        <TextView
            android:id="@+id/tv_depDisposer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="depDisposer"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_depRoute" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>




