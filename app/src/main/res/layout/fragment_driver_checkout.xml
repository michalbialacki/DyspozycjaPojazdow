<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    tools:context=".Fragmenty.DPKT.DriverCheckout">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/lt_swipable"
        android:background="@drawable/gradient_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lt_drugiLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edt_WprowadzNrRejestracyjny"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="106dp"
                android:ems="10"
                android:hint="Wprowadź rejestrację pojazdu"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_IdKierowcy" />

            <EditText
                android:id="@+id/edt_IdKierowcy"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="235dp"
                android:layout_marginEnd="106dp"
                android:layout_marginBottom="42dp"
                android:ems="10"
                android:hint="Wprowadź ID kierowcy"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/edt_WprowadzNrRejestracyjny"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_Dalej"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="286dp"
                android:layout_marginTop="193dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="51dp"
                android:text="Dalej"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_IdKierowcy" />

            <ImageView
                android:id="@+id/img_CheckDepartures"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:src="@android:drawable/ic_dialog_dialer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>